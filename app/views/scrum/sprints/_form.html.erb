<%= form_with(model: scrum_sprint,
              url: (scrum_sprint.new_record? ? scrum_board_sprints_path(scrum_sprint.scrum_board, scrum_sprint): scrum_sprint),
              local: true) do |form| %>

  <%= bootstrap_errors_for(scrum_sprint) %>

  <%= form.hidden_field :scrum_board_id, value: scrum_sprint.scrum_board.id %>

  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-4">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <label>Sprint Dates</label>
    </div>
    <div class="col-sm-2">
      <%= bootstrap_datepicker form, :started_on, { aria_describedby: 'startedOnHelp' } %>
      <small id="startedOnHelp" class="form-text text-muted">Started</small>
    </div>
    <div class="col-sm-1 text-center pt-2">
      to
    </div>
    <div class="col-sm-2">
      <%= bootstrap_datepicker form, :ended_on, { aria_describedby: 'endedOnHelp' } %>
      <small id="endedOnHelp" class="form-text text-muted">Ended</small>
    </div>

  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <label>Story Points</label>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :story_points_committed,
                          class: 'form-control',
                          aria_describedby: 'storyPtsCommitedHelp' %>
      <small id="storyPtsCommitedHelp" class="form-text text-muted">Committed</small>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :story_points_completed,
                          class: 'form-control',
                          aria_describedby: 'storyPtsCompleteHelp' %>
      <small id="storyPtsCompleteHelp" class="form-text text-muted">Completed</small>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :average_story_size,
                          class: 'form-control',
                          aria_describedby: 'avgStorySizeHelp' %>
      <small id="avgStorySizeHelp" class="form-text text-muted">Average Story Size</small>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <label>Backlog Stories</label>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :backlog_stories_count,
                          class: 'form-control',
                          aria_describedby: 'backlogStoryCountHelp' %>
      <small id="backlogStoryCountHelp" class="form-text text-muted">Number</small>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :backlog_story_points,
                          class: 'form-control',
                          aria_describedby: 'backlogStoryPtsHelp' %>
      <small id="backlogStoryPtsHelp" class="form-text text-muted">Points</small>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <label>Wish Heap Stories</label>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :wish_heap_stories_count,
                          class: 'form-control',
                          aria_describedby: 'wishHeapStoryCountHelp' %>
        <small id="wishHeapStoryCountHelp" class="form-text text-muted">Number</small>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :wish_heap_story_points,
                          class: 'form-control',
                          aria_describedby: 'wishHeapStoryPtsHelp' %>
        <small id="wishHeapStoryPtsHelp" class="form-text text-muted">Points</small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :notes, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :notes, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary ml-2" %>
  </div>
<% end %>
