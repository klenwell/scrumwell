<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Type</th>
      <th scope="col">Action</th>
      <th scope="col">Trello Type</th>
      <th scope="col">Occurred At</th>
      <th scope="col" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><code><%= event.eventable_type %></code></td>
        <td><code><%= event.action %></code></td>
        <td><code><%= event.trello_type %></code></td>
        <td>
          <span class="momentize-time-ago" data-datetime="<%= event.occurred_at.to_i %>">
            <%= event.occurred_at %>
          </span>
        </td>
        <td>
          <%= link_to show_icon, scrum_event_path(event) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
