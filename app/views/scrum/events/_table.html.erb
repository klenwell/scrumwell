<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Type</th>
      <th scope="col">Action</th>
      <th scope="col">Trello Type</th>
      <th scope="col">Occurred At</th>
      <th scope="col" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= event.eventable_type %></td>
        <td><%= event.action %></td>
        <td><%= event.trello_type %></td>
        <td><%= event.occurred_at %></td>
        <td>
          <%= link_to show_icon, scrum_event_path(event) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
