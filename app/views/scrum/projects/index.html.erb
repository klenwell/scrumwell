<p id="notice"><%= notice %></p>

<h1>Scrum Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scrum_projects.each do |scrum_project| %>
      <tr>
        <td><%= scrum_project.name %></td>
        <td><%= link_to 'Show', scrum_project %></td>
        <td><%= link_to 'Edit', edit_scrum_project_path(scrum_project) %></td>
        <td><%= link_to 'Destroy', scrum_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<div class="actions">
  <p>To add a new project, choose a Trello board.</p>
  <p><%= link_to 'Trello Boards', trello_boards_path, role: 'button', class: 'btn btn-primary' %></p>
</div>
