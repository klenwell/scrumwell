<h2>Trello Organizations</h2>
<p class="lead">For user <%= @trello.me.username %><p>
<p><%= @trello.public_orgs.count %> orgs listed<p>

<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Org</th>
      <th scope="col">URL</th>
      <th scope="col">Boards</th>
    </tr>
  </thead>
  <tbody>
    <% @trello.public_orgs.each do |org| %>
      <tr>
        <th scope="row"><%= org.display_name %></th>
        <td><%= link_to org.url, org.url %></td>
        <td><%= link_to org.boards.count, trello_orgs_boards_path(org.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
