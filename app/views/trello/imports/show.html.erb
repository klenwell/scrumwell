<div class="row justify-content-center">
  <div class="card import-card">
    <div class="card-header">
      <div class="row">
        <div class="col">
          <p><%= link_to @import.board.name, scrum_board_path(@import.board) %> Import</p>
        </div>
      </div>
    </div>
    <div class="card-body">
      <table class="import-card-table">
        <tr>
          <td class="field-label" colspan="2">Status</td>
          <td data-import-status="<%= @import.status %>"><%= @import.status %></td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">Error</td>
          <td><%= @import.error || 'N/A' %></td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">Started at</td>
          <td><%= @import.created_at %></td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">Completed at</td>
          <td><%= @import.ended_at || 'N/A' %> </td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">Duration</td>
          <td><%= @import.duration.try(:to_d) %> s</td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">Events</td>
          <td><%= @import.events.count %></td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">First Event</td>
          <td><%= @import.first_event.try(:occurred_at) || 'N/A'  %></td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">Last Event</td>
          <td><%= @import.last_event.try(:occurred_at) || 'N/A'  %></td>
        </tr>
        <tr>
          <td class="field-label" colspan="2">Span (Days)</td>
          <td><%= @import.events_period || '0' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="actions">
  <%= link_to 'Imports', trello_imports_path, role: 'button', class: 'btn btn-info ml-2' %>
</div>
